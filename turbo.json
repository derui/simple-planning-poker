{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": {
        "dependsOn": ["^lint"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "check-type": {
      "dependsOn": ["^check-type"]
    },
    "launch-emulator": {
      "persistent": true,
      "cache": false
    },
    "wait-emulator": {
      "dependsOn": ["@spp/tests-firebase-emulator-launcher#build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["build", "wait-emulator"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
