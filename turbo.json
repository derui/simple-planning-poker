{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": {
        "dependsOn": ["^lint"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "check-type": {
      "dependsOn": ["^check-type"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
