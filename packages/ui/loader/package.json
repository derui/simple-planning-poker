  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "check-type": "tsc --noEmit",
    "build:tsc": "tsc",
    "dev:build:tsc": "tsc --watch --noEmit",
    "build:css": "tailwindcss -i src/style.css -o dist/style.css",
    "dev:build:css": "tailwindcss --watch -i src/style.css -o dist/style.css",
    "test": "vitest run",
    "dev:test": "vitest watch",
    "lint": "eslint --cache --cache-location=node_modules/.cache/eslint --fix src/",
    "dev:storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "dev": "concurrently \"pnpm:dev:*\"",
    "build": "concurrently \"pnpm:build:*\""
  },
  "type": "module",
  "keywords": [],
