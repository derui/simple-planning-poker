{
  "rules": {
    "games": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "rounds": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "authenticated": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "invitations": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "defined-users": {
      ".read": true,
      ".write": false
    },
    "users": {
      "$user_id": {
        ".read": "auth != null",
        ".write": "auth != null && $user_id === auth.uid"
      }
    },
    "roundHistories": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$game": {
        ".indexOn": "finishedAt"
      }
    }
  }
}
