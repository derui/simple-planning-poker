  "main": "index.js",
  "type": "module",
  "scripts": {
    "start:vite": "vite",
    "start:tsc": "tsc --watch",
    "start": "concurrently --handle-input \"pnpm:copy-assets\" \"pnpm:start:*\"",
    "ci": "CI=true firebase emulators:exec --ui 'npx vite'",
    "start:emulators": "firebase emulators:start --import ./misc/local",
    "build:bundle": "NODE_ENV=production vite build",
    "copy-assets": "cpx 'assets/**' dist/static/",
    "build": "pnpm run build:bundle && pnpm run copy-assets",
    "deploy:preview": "firebase hosting:channel:deploy preview_name",
    "deploy:production": "firebase deploy",
    "publish:preview": "pnpm run build && pnpm run deploy:preview",
    "publish:production": "pnpm run build && pnpm run deploy:production",
    "lint": "eslint --cache --cache-location=node_modules/.cache/eslint --fix --ext .ts,.tsx src/",
    "test": "firebase emulators:exec 'npx vitest run'",
    "test:watch": "firebase emulators:exec 'npx vitest watch'",
    "test:watch:noemu": "npx vitest watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
