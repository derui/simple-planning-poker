{
  "name": "planning-poker-react",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:webpack": "webpack serve --config webpack.config.js --port 5000",
    "start:css": "postcss --watch -o build/static/css/app.css src/css/root.css",
    "start": "npm-run-all -p start:webpack start:css",
    "build:bundle": "NODE_ENV=production webpack --config webpack.config.js",
    "build:css": "postcss -o build/static/css/app.css src/css/root.css",
    "build": "npm-run-all build:bundle build:css",
    "lint:css": "stylelint --config stylelint.config.js 'src/css/**/*.css'",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "collectCoverageFrom": [
      "src/ts/**/*.{ts,tsx}",
      "!node_modules/"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/ts/$1"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "watchPathIgnorePatterns": [
      "node_modules"
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/recoil": "^0.0.9",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "cssnano": "^5.0.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-extend-rule": "^3.0.0",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^8.0.1",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.0",
    "recoil": "^0.4.0",
    "uuid": "^8.3.2"
  }
}
