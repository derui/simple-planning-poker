{
  "name": "planning-poker-react",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:webpack": "webpack serve --config webpack.config.js --port 5000 --static public --history-api-fallback",
    "start:css": "postcss --watch -o public/static/css/app.css src/css/root.css",
    "start": "npm-run-all -p start:webpack start:css emulators",
    "emulators": "firebase emulators:start",
    "build:bundle": "NODE_ENV=production webpack --config webpack.config.js",
    "build:css": "postcss -o public/static/css/app.css src/css/root.css",
    "copy-assets": "cpx 'assets/**' public/static/",
    "build": "npm-run-all -s build:bundle build:css copy-assets",
    "deploy:preview": "firebase hosting:channel:deploy preview_name",
    "deploy:production": "firebase deploy",
    "publish:preview": "npm-run-all -s build deploy:preview",
    "publish:production": "npm-run-all -s build deploy:production",
    "lint:css": "stylelint --config stylelint.config.js 'src/css/**/*.css'",
    "lint:ts": "eslint --fix --ext .ts,.tsx src/ts/",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/ts/**/*.{ts,tsx}",
      "!node_modules/"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "@swc/jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/ts/$1"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "watchPathIgnorePatterns": [
      "node_modules"
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.2.84",
    "@swc/jest": "^0.2.2",
    "@types/classnames": "^2.3.1",
    "@types/firebase": "^3.2.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-router": "^5.1.16",
    "@types/react-router-dom": "^5.1.8",
    "@types/recoil": "^0.0.9",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "cpx": "^1.5.0",
    "cssnano": "^5.0.8",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "firebase-tools": "^9.17.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-extend-rule": "^3.0.0",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^8.0.1",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.1.0"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "firebase": "^9.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.2.1",
    "recoil": "^0.4.1",
    "uuid": "^8.3.2"
  }
}
