{
  "name": "planning-poker",
  "version": "3.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:webpack": "webpack serve --config webpack.config.js --port 5000 --static public --history-api-fallback",
    "start:tsc": "tsc --watch",
    "start:vite": "vite",
    "start:css": "postcss --watch -o public/static/css/app.css src/css/root.css",
    "start": "npm-run-all -p start:tsc start:vite start:css emulators",
    "emulators": "firebase emulators:start",
    "build:bundle": "NODE_ENV=production vite build --config webpack.config.js",
    "build:css": "postcss -o public/static/css/app.css src/css/root.css",
    "copy-assets": "cpx 'assets/**' public/static/",
    "build": "npm-run-all -s build:bundle build:css copy-assets",
    "deploy:preview": "firebase hosting:channel:deploy preview_name",
    "deploy:production": "firebase deploy",
    "publish:preview": "npm-run-all -s build deploy:preview",
    "publish:production": "npm-run-all -s build deploy:production",
    "lint:css": "stylelint --config stylelint.config.js 'src/css/**/*.css'",
    "lint:ts": "eslint --fix --ext .ts,.tsx src/ts/",
    "lint": "npm-run-all -s lint:ts lint:css",
    "test": "firebase emulators:exec 'npx jest'",
    "test:watch": "firebase emulators:exec 'npx jest --watch'"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/ts/**/*.{ts,tsx}",
      "!node_modules/"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ],
    "testURL": "http://localhost",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/ts/$1",
      "solid-js/web": "<rootDir>/node_modules/solid-js/web/dist/web.cjs",
      "solid-js": "<rootDir>/node_modules/solid-js/dist/solid.cjs"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "watchPathIgnorePatterns": [
      "node_modules"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/ts/setupTests.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json",
        "babelConfig": {
          "presets": [
            "babel-preset-solid",
            "@babel/preset-env"
          ]
        }
      }
    }
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@firebase/rules-unit-testing": "^2.0.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^27.4.1",
    "@types/testing-library__jest-dom": "^5.14.4",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "autoprefixer": "^10.4.4",
    "babel-preset-solid": "^1.4.4",
    "cpx": "^1.5.0",
    "cssnano": "^5.1.7",
    "esbuild": "^0.14.43",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint_d": "^12.0.0",
    "firebase-tools": "^10.9.2",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-extend-rule": "^4.0.0",
    "postcss-import": "^14.1.0",
    "postcss-nesting": "^10.1.4",
    "prettier": "^2.6.2",
    "solid-testing-library": "^0.3.0",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-prettier": "^2.0.0",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "vite": "^2.9.12",
    "vite-plugin-solid": "^2.2.6",
    "vite-tsconfig-paths": "^3.5.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "crypto-js": "^4.1.1",
    "firebase": "^9.6.10",
    "solid-app-router": "^0.4.0",
    "solid-js": "^1.4.4",
    "uuid": "^8.3.2"
  }
}
